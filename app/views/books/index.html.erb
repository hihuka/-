<h2>Books</h2>
<table>
  <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <th>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
      </th>
    </tbody>
</table>

<% @books.each do |book| %>
<%=book.title%>
<%=book.body%>
 <span><%= link_to "Show", book_path(book.id) %></span>
 <span><%= link_to "Edit", book_path(book.id) %></span>
 <span><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></span>
<% end %>

<h2>New book</h2>
<%= form_with model: @book,ul:'/books',method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %></br

<% end %>
